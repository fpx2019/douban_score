  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.module-group .module-top .module-title{
  color: #494949;
}

.module-group .module-top .module-more{
  color: #41be57;
}

.module-group .module-scroll-view{
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}

